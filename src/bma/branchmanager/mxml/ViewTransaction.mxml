<?xml version="1.0" encoding="utf-8"?>
<!-- Dialog.mxml -->
<mx:TitleWindow xmlns:mx="http://www.adobe.com/2006/mxml"
				layout="vertical"
				title="View Transaction Details"
				showCloseButton="true"
				width="600"
				height="300"
				close="titleWindow_close(event);">
	
	<mx:Script>
		<![CDATA[
			import mx.events.CloseEvent;
			import mx.managers.PopUpManager;
			
			private function titleWindow_close(evt:CloseEvent):void {
				PopUpManager.removePopUp(this);
			}
		]]>
	</mx:Script>
	<mx:HBox>		
		<mx:VBox>
			<mx:HBox>
				<mx:Label text="Transaction Id : "/>
				<mx:Spacer width="35"/>
				<mx:Label text="T1"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Transaction Date : "/>
				<mx:Spacer width="20"/>
				<mx:Label text="1-Jan-2012"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Supervisor Id : "/>
				<mx:Spacer width="45"/>
				<mx:Label text="SV1"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Customer Id : "/>
				<mx:Spacer width="45"/>
				<mx:Label text="C1"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Total Asset : "/>
				<mx:Spacer width="50"/>
				<mx:Label text="10 grams"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Amount Paid : "/>
				<mx:Spacer width="40"/>
				<mx:Label text="25000 INR"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Rate Of Interest : "/>
				<mx:Spacer width="30"/>
				<mx:Label text="10%"/>
			</mx:HBox>	
		</mx:VBox>
		<mx:Spacer width="100"/>
		<mx:VBox>			
			<mx:HBox>		
				<mx:Label text="Due Amount : "/>
				<mx:Spacer width="60"/>
				<mx:Label text="30000 INR"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Due Date : "/>
				<mx:Spacer width="75"/>
				<mx:Label text="3-Mar-2012"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Last Due Date Extended : "/>
				<mx:Label text="2-Feb-2012"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Asset Break Up : "/>		
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Ring : "/>
				<mx:Spacer width="100"/>
				<mx:Label text="2 grams"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Chain : "/>
				<mx:Spacer width="90"/>
				<mx:Label text="5 grams"/>
			</mx:HBox>
			<mx:HBox>		
				<mx:Label text="Bangle : "/>
				<mx:Spacer width="90"/>
				<mx:Label text="8 grams"/>
			</mx:HBox>
		</mx:VBox>
	</mx:HBox>
	<mx:Spacer height="35"/>
	<mx:HBox>
		<mx:Spacer width="250"/>
		<mx:Button label="Close" />
	</mx:HBox>
</mx:TitleWindow>